<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Helpers">
            <directory>./test/Helpers</directory>
        </testsuite>
        <testsuite name="Trait Helpers">
            <directory>./tests/Flags</directory>
            <directory>./tests/Traits</directory>
        </testsuite>
        <testsuite name="Models">
            <directory>./tests/Models</directory>
        </testsuite>
        <testsuite name="Everything Else">
            <directory>./tests</directory>
            <directory>./tests/Others</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing"/>
    </php>
</phpunit>